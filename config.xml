<?xml version='1.0' encoding='utf-8'?>
<widget id="codify.rayte.ios" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rayte</name>
    <description>
        Servicio Taxis Empresariales
    </description>
    <author email="dev@codify.com.mx" href="http://www.codify.com.mx">
        Codify Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
	
	<gap:plugin name="org.apache.cordova.device" />
	<gap:plugin name="org.apache.cordova.dialogs" />
	<gap:plugin name="org.apache.cordova.geolocation" />
	<gap:plugin name="org.apache.cordova.network-information" />
	
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
		<icon src="www/assets/img/180.png" gap:platform="ios" width="180" height="180" />
		<icon src="www/assets/img/60.png" gap:platform="ios" width="60" height="60" />
		<icon src="www/assets/img/120.png" gap:platform="ios" width="120" height="120" />
		<icon src="www/assets/img/76.png" gap:platform="ios" width="76" height="76" />
		<icon src="www/assets/img/152.png" gap:platform="ios" width="152" height="152" />
		<icon src="www/assets/img/29.png" gap:platform="ios" width="29" height="29" />
		<icon src="www/assets/img/58.png" gap:platform="ios" width="58" height="58" />
		<icon src="www/assets/img/40.png" gap:platform="ios" width="40" height="40" />
		<icon src="www/assets/img/80.png" gap:platform="ios" width="80" height="80" />
		<icon src="www/assets/img/72.png" gap:platform="ios" width="72" height="72" />
		<icon src="www/assets/img/144.png" gap:platform="ios" width="144" height="144" />
    </platform>
</widget>
