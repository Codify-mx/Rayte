<?xml version='1.3' encoding='utf-8'?>
<widget id="codify.rayte.android" version="0.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rayte</name>
    <description>
        Servicio Taxis Empresariales
    </description>
    <author email="dev@codify.com.mx" href="http://www.codify.com.mx">
        Codify Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/assets/img/48.png" density="ldpi" />
        <icon src="www/assets/img/72.png" density="mdpi" />
        <icon src="www/assets/img/96.png" density="hdpi" />
        <icon src="www/assets/img/144.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
